<h2> Übersicht der Projekte </h2>

<hr> 
 <%= link_to "Neues Projekt anlegen", new_project_path %>
 <%#= button_to "login", login_path %>

<hr>

<table border = "1" style=" width:100% ; border: 1px solid red;">
	<tr>
		<th> Titel </th>
		<th> Beschreibung </th>
		<th> Begin </th>

	</tr>
	<% @projects.each do |p|   %>
	


	<tr>

	<td> <%= p.title %> </td>
	<td> <%= p.description %> </td>
	<td> <%= p.start_date %> </td>
	<td> <%= link_to "details" , project_path( p.id)%> </td>
	<td> <%= link_to "edit" , 	edit_project_path( p.id)%> </td>
	<td> <%= link_to "löschen" , 	project_path( p.id) , method: :delete , data: { confirm: "Wirklich???"}%> </td>
	<td>  </td>


	</tr>

	<% end %>

</table>

